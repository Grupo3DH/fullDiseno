<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head.ejs", {Solapa: "Productos" }) %>
</head>

<body>
    <%- include("./partials/headerGeneral.ejs") %>
        <h1 style="text-align: center;">Nuestros productos</h1>
        <div class="allproducts">
            <% if( products.length > 0){ %>
            <% for(let i=0; i< products.length; i++) { %>
            <article>
              
                    <a href="/products/detail/<%= products[i].id %>">
                        <div class="price">
                            <h2>
                                <%= products[i].name %>
                            </h2>
                            <br>
                            <p>
                                $<%= products[i].price %>
                            </p>
                        </div>
                        <img src="/uploads/product/<%= products[i].image.length > 0 ? products[i].image[0].filename : null %>"
                            alt="fullOutfit">
                    </a>
                
            </article>
            <% } %>
            <% } else { %>
                <h2 style="padding: 30px;">No se encontraron productos para esta b√∫squeda</h2>
            <% } %>
                <br>
        </div>
        <%- include("./partials/footer.ejs") %>
</body>

</html>